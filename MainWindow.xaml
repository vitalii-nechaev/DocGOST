<Window x:Class="DocGOST.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ДокГОСТ версия 0.92" Height="1024" Width="1280" Closing="Window_Closing" Icon="Images/GOST icon.png" MinWidth="800" MinHeight="480" SizeChanged="Window_SizeChanged" WindowState="Maximized">
    <Window.InputBindings>
        <KeyBinding Key="Z" Modifiers="Ctrl" Command="ApplicationCommands.Undo"/>
        <KeyBinding Key="Y" Modifiers="Ctrl" Command="ApplicationCommands.Redo"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="ApplicationCommands.Save"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="ApplicationCommands.Open"/>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="ApplicationCommands.New"/>
        <KeyBinding Key="F4" Modifiers="Alt" Command="ApplicationCommands.Close"/>
    </Window.InputBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*" MinHeight="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="210*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="1006*"/>
        </Grid.ColumnDefinitions>
        <Menu Height="20" VerticalAlignment="Top" Grid.ColumnSpan="5">
            <MenuItem Header="Файл">
                <MenuItem x:Name="createProjectMenuItem" Header="Создать проект" Click="CreateProject_Click" InputGestureText="Ctrl+N"></MenuItem>
                <MenuItem x:Name="openProjectMenuItem" Header="Открыть проект" Click="OpenProject_Click" InputGestureText="Ctrl+O"></MenuItem>
                <Separator />
                <MenuItem x:Name="saveProjectMenuItem" Header="Сохранить проект" Click="SaveProject_Click" IsEnabled="False" InputGestureText="Ctrl+S">
                </MenuItem>
                <Separator />
                <MenuItem x:Name="importMenuItem" Header="Импорт данных" IsEnabled="False">
                    <MenuItem x:Name="importPrjPcbfromADMenuItem" Header="Altium Designer" Click="ImportPrjPcbfromAD_Click"></MenuItem>
                    <MenuItem x:Name="importPrjfromKiCadMenuItem" Header="KiCad" Click="ImportPrjfromKiCad_Click"></MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem x:Name="createPdfMenuItem" Header="Экспорт в pdf" IsEnabled="False" Click="CreatePdf_Click" />
                <Separator/>
                <MenuItem x:Name="exitMenuItem" Header="Выход" InputGestureText="Alt+F4" Click="ExitMenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="Правка">
                <MenuItem x:Name="undoMenuItem" Header="Отменить" Click="UndoButton_Click" IsEnabled="False" InputGestureText="Ctrl+Z"/>
                <MenuItem x:Name="redoMenuItem" Header="Вернуть" Click="RedoButton_Click" IsEnabled="False" InputGestureText="Ctrl+Y"/>
            </MenuItem>

            <MenuItem Header="Редактирование">
                <MenuItem x:Name="osnNadpisMenuItem" Header="Основная надпись" IsEnabled="False" Click="osnNadpisButton_Click" />
            </MenuItem>

            <MenuItem Header="Справка">
                <MenuItem x:Name="helpMenuItem" Header="Справка" Click="helpMenuItem_Click" />
            </MenuItem>
        </Menu>
        <Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" >
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="100"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*" MinHeight="100"/>
            </Grid.RowDefinitions>
            <TreeView>
                <TreeViewItem x:Name="projectTreeViewItem">
                </TreeViewItem>
            </TreeView>
            <GridSplitter Grid.Row="1" Grid.ColumnSpan="1" ResizeDirection="Rows" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <StackPanel Grid.Column="0" Grid.Row="2" >
                <Label Content="Редактирование"/>
                <Button Content="Основная надпись" x:Name="osnNadpisButton" Margin="10,5,10,5" IsEnabled="False" Click="osnNadpisButton_Click"/>
                <Button x:Name="desigDescrButton" Content="Поз. обозначения" Margin="10,5,10,5" Click="desigDescrButton_Click"/>
                <Label Content="Настройки экспорта в pdf"/>
                <CheckBox x:Name="addListRegistrCheckBox" Content="Добавить ЛР" IsChecked="True" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                <CheckBox x:Name="startFromSecondCheckBox" Content="Нумерация листов с 2" IsChecked="False" Margin="10,0,0,0" HorizontalAlignment="Left"/>
                <Label x:Name="numberOfValidStringsLabel"/>
            </StackPanel>
        </Grid>

        <GridSplitter Grid.Row="1" Grid.Column="3" ResizeDirection="Columns" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Grid  Grid.Column="4" Grid.Row="1" Margin="5,0,5,5">

            <ListView x:Name="perechenListView" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                <ListView.Resources>
                    <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
                </ListView.Resources>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn x:Name="pageOfPerechenColumn" Header="Лист" Width="30">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock x:Name="namePerechenTextBlock" Background="Transparent" Foreground="DarkGray" Text="{Binding page}"/>                                        
                                    </Grid>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn x:Name="designatorPerechenColumn" Header="Поз. обозначение" DisplayMemberBinding="{Binding designator}" Width="120"/>
                        <GridViewColumn x:Name="namePerechenColumn" Header="Наименование" Width="410">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <TextBlock x:Name="namePerechenTextBlock" Background="Transparent" Text="{Binding name}"/>
                                        <TextBox BorderBrush="Black" BorderThickness="0,0,0,1" Width="{Binding Width, ElementName=namePerechenTextBlock}" Background="Transparent" Visibility="{Binding isNameUnderlined, Converter={StaticResource BoolToVisConverter}}"/>
                                    </Grid>

                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn x:Name="quantityPerechenColumn" Header="Кол." DisplayMemberBinding="{Binding quantity}" Width="70"/>
                        <GridViewColumn x:Name="notePerechenColumn" Header="Примечание" DisplayMemberBinding="{Binding note}" Width="120"/>
                        <GridViewColumn Header="Редактировать" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="40" Click="PerechenEdit_Click" Height="25" Background="Transparent" CommandParameter="{Binding}">
                                        <Image Source="Images/edit.png" Height="22" />
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Добавить" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="40" Click="PerechenAdd_Click"  Height="25" Background="Transparent" ToolTip="Вставить строку сверху" CommandParameter="{Binding}">
                                        <Image Source="Images/add.png" Height="22" />
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Удалить" Width="90">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Width="40" Click="PerechenDelete_Click"  Height="25" Background="Transparent" CommandParameter="{Binding}">
                                        <Image Source="Images/Delete.png" Height="22" />
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
