<Window x:Class="DocGOST.VariantSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocGOST"
        mc:Ignorable="d"
        Title="Выбор исполнения" Icon="Images/GOST icon.png" Height="240" Width="480" MaxHeight="240" MaxWidth="480" MinHeight="240" MinWidth="480">
    <Grid>
        <StackPanel VerticalAlignment="Stretch">
            <Label Content="Выберите исполнение (Variant):" HorizontalAlignment="Center" Margin="0,30,0,0"/>
            <ComboBox x:Name = "variantSelectionComboBox" HorizontalAlignment="Center" Width="260" VerticalAlignment="Center" Margin="0,30,0,0" />            
        </StackPanel>
        <Button Margin="0,0,0,20" Content="OK" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="100" VerticalAlignment="Bottom" Click="Accept_Click"/>
        
    </Grid>
</Window>
